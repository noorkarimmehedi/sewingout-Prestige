  </a>
</div>

<script>
(function() {
  'use strict';
  
  // Track button clicks (optional - for analytics)
  const whatsappButton = document.querySelector('.whatsapp-float-button');
  
  if (whatsappButton) {
    whatsappButton.addEventListener('click', function(e) {
      // Log to console
      console.log('WhatsApp widget clicked');
      
      // Optional: Send to Google Analytics if available
      if (typeof gtag !== 'undefined') {
        gtag('event', 'click', {
          'event_category': 'WhatsApp',
          'event_label': 'Chat Button'
        });
      }
      
      // Optional: Send to Facebook Pixel if available
      if (typeof fbq !== 'undefined') {
        fbq('track', 'Contact');
      }
    });
  }
  
  // Optional: Remove badge after first click
  whatsappButton?.addEventListener('click', function() {
    const badge = this.querySelector('.whatsapp-badge');
    if (badge) {
      badge.style.display = 'none';
    }
  }, { once: true });
  
})();
</script>